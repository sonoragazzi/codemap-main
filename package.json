{
  "name": "codemap-coworking",
  "version": "1.0.0",
  "description": "Visualize Claude Code and Windsurf agents as characters in a pixel-art coworking space",
  "type": "module",
  "bin": {
    "codemap": "./bin/setup.js",
    "codemap-coworking": "./bin/setup.js"
  },
  "workspaces": ["server", "client"],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=server",
    "dev:client": "npm run dev --workspace=client",
    "build": "npm run build --workspace=server && npm run build --workspace=client",
    "setup": "node bin/setup.js setup",
    "start": "node bin/setup.js start"
  },
  "keywords": ["claude", "claude-code", "windsurf", "visualization", "agents", "pixel-art", "coworking"],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sonoragazzi/codemap-main"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  }
}
